SOURCES.libt3config.la = lex.l parser.g config.c config_shared.c util.c
LDLIBS.libt3config.la = -lm
CFLAGS.lex = -Wno-unused -Wno-unused-parameter -Wno-switch-default

LTTARGETS := libt3config.la
#================================================#
# NO RULES SHOULD BE DEFINED BEFORE THIS INCLUDE #
#================================================#
include ../../makesys/rules.mk
#================================================#
T3NAME := config
include ../../t3shared/rules.mk

CFLAGS += -I.objects
CFLAGS += -DHAS_STRDUP
CFLAGS += -DHAS_USELOCALE

.objects/lex_hide.h: .objects/lex.c
	@echo [GEN] $@; { echo -e "/* This file is automatically generated from lex.c. DO NOT EDIT. */\
		\n#ifndef LEX_HIDE_H\n#define LEX_HIDE_H\n"; \
		egrep  '^(void|int|FILE|YY_EXTRA_TYPE|YY_BUFFER_STATE).*;' $< | \
		sed -r 's/^/T3_CONFIG_LOCAL /' ; echo "#endif" ; } > $@

.objects/lex.lo: .objects/parser.h .objects/lex_hide.h
.objects/config.lo: .objects/parser.h

.SECONDARY: .objects/parser.c .objects/parser.h .objects/lex.c .objects/lex_hide.h
