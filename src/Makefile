SOURCES.libt3config.la = lex.l parser.g config.c config_shared.c util.c write.c \
	expression.c schema.c pathsearch.c xdg.c
LDLIBS.libt3config.la = -lm
CFLAGS.lex = -Wno-unused -Wno-unused-parameter -Wno-switch-default

SOURCES.test = test.c
LDFLAGS.test = -L.libs
LDLIBS.test = -lt3config

TARGETS := test
LTTARGETS := libt3config.la
#================================================#
# NO RULES SHOULD BE DEFINED BEFORE THIS INCLUDE #
#================================================#
include ../../makesys/rules.mk
#================================================#
T3NAME := config
include ../../shared/rules.mk

CFLAGS += -I.objects
CFLAGS += -DHAS_STRDUP
CFLAGS += -DHAS_USELOCALE
CFLAGS += -DUSE_GETTEXT
#~ CFLAGS += -DNO_XDG

.objects/lex_hide.h: .objects/lex.c
	$(GENOBJDIR)
	$(_VERBOSE_GEN) { echo -e "/* This file is automatically generated from lex.c. DO NOT EDIT. */\
		\n#ifndef LEX_HIDE_H\n#define LEX_HIDE_H\n"; \
		egrep  '^(void|int|FILE|YY_EXTRA_TYPE|YY_BUFFER_STATE).*;' $< | \
		sed -r 's/^/T3_CONFIG_LOCAL /' ; echo "#endif" ; } > $@

.objects/lex.lo: .objects/parser.h .objects/lex_hide.h
.objects/config.lo: .objects/parser.h

.objects/schema.lo: .objects/meta_schema.bytes

.objects/%.bytes: %.schema
	$(GENOBJDIR)
	$(_VERBOSE_GEN) ./data2bytes -s -- $< > $@

links:
	@[ -L t3config ] || ln -s . t3config

test: | libt3config.la

.SECONDARY: .objects/parser.c .objects/parser.h .objects/lex.c .objects/lex_hide.h
